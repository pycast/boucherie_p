{% extends 'base.html.twig' %}

{% block title %}>Mes commandes - Boucherie Paux{% endblock %}

{% block content %}
    <h2>Suivi des commandes </h2>
    <p>C'est dans cet espace que vous allez pouvoir gérer toutes vos commandes.</p>
    {% if orders|length == 0 %}
        <hr>
        <p class="text-center">
            Vous n'avez pas encore passé de commande sur La Boucherie Paux.
        </p>
    {% else %}
    <div class="table-responsive">
        <table class="table mt-5 table-dark">
            <thead>
                <tr>
                    <th scope="col">Référence</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Passée le</th>
                    <th scope="col">Produits</th>
                    <th scope="col">Total</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                        <tr>
                            <td><span class="badge badge-secondary">{{ order.reference }}</span></td>
                            <td>
                                {% if order.state == 1 %}
                                    Paiement accepté
                                {% elseif order.state == 2 %}
                                    Commande en attente
                                {% elseif order.state == 3 %}
                                    préparation en cours
                                {% elseif order.state == 0 %}
                                    Commande en attente
                                {% endif %}
                            </td>
                            <td>{{ order.createdAt|date('d/m/Y') }}</td>
                            <td>{{ order.orderDetails|length }}</td>
                            <td>{{ (order.getTotal /100)|number_format(2, ',', '.') }} €</td>
                            <td class="text-right"><a href="{{ path('account_order_show', { 'reference' : order.reference }) }}">Voir ma commande</a></td>
                        </tr>
                {% endfor %}
            </tbody>
        </table> 
    </div>
    {% endif %}
    <hr>
    <a href="{{ path('account') }}">Retour à mon compte</a>
{% endblock %}