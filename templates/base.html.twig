<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Boucherie Paux{% endblock %}</title>
    <link rel="icon" href="{{ asset('build/images/logo@1000x.png') }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  {% block body %}
  <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand logo" href="{{ path('home') }}">
        <img src="{{ asset('build/images/logo@1000x.png') }}" alt="">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Nos produits
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="{{path('products')}}">Tous nos produits</a></li>
              <li><a class="dropdown-item" href="{{path('products_butchery')}}">Boucherie</a></li>
              <li><a class="dropdown-item" href="{{path('products_caterer')}}">Traiteur</a></li>
            </ul>
          </li>
          {% if app.user %}
            <li class="nav-item">
              <a class="nav-link active" href="{{path('account')}}"> Mon Profil <small>( {{ app.user.firstname }} )</small></a> 
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="{{path('app_logout')}}"> Deconnection </a>
            </li>
          {% else %}
            <li class="nav-item">
              <a class="nav-link active" href="{{path('app_login')}}"> Connexion </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="{{path('register')}}"> Inscription </a>
            </li>
          {% endif %}
        </ul>
        <a href="{{ path('cart') }}">
          <img src="{{ asset('build/images/shopping-cart.png') }}" height="40px" alt="Mon-panier">
        </a>
      </div>
    </div>
  </nav>

  <!-- container -->
  <div class="container marketing {% if block('carousel') is not defined %}mt-5{% endif %} ">
    {% block content %}
    {% endblock %}
  </div>

  <!-- Footer-->
  <footer class="footer-custom">
    <p>Team Gradient &copy; <br>
      Boucherie Paux 2022</p>
  </footer>
{% endblock %}